<!DOCTYPE html>
<html>
  <head>
    <title>FacebookNeue</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <p><%= link_to "Sign Up", new_user_registration_path, class: "button" %></p>
    <p><%= link_to "Logout", destroy_user_session_path, method: :delete, class: "button" %></p>

    <%= yield %>
  </body>
</html>
