<!DOCTYPE html>
<html>
  <head>
    <title>FacebookNeue</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/31b3a4ba31.js" crossorigin="anonymous"></script>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'layouts/navbar' %>
    <% if flash[:notice] %>
      <div class="notification is-primary is-light global-notification">
        <p class="notice"><%= notice %></p>  
      </div>
    <% end %>
    <% if flash[:alert] %>
      <div class="notification is-danger global-notification">
        <p class="alert"><%= alert %></p>  
      </div>
    <% end %>

    <section class="section">
    <div class="container">
      <%= yield %>
    </div>
    </section>
    
  </body>
</html>
