<div class="columns is-centered">
  <div class="column is-5">
    <h2 class="title is-2">Edit Profile</h2>

      <%= form_with(model: profile, local: true) do |form| %>
        <% if profile.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

            <ul>
            <% profile.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

      <div class="field">
      <div class="control">
        <%= form.label :birthdate %>
        <%= form.date_field :birthdate %>
      </div>
      </div>

      <div class="field">
      <div class="control">
        <%= form.label :relationship_status %>
        <%= form.text_field :relationship_status  %>
      </div>
      </div>

      <div class="field">
      <div class="control">
        <%= form.label :hometown %>
        <%= form.text_field :hometown %>
      </div>
      </div>

      <div class="field">
      <div class="control">
          <%= form.label :current_city %>
          <%= form.text_field :current_city %>
      </div>
      </div>

      <div class="field">
      <div class="control">
        <%= form.label :favorite_quote %>
        <%= form.text_area :favorite_quote %>
      </div>
      </div>

      <div class="field">
      <div class="control">
        <%= form.label :about_you %>
        <%= form.text_area :about_you %>
      </div>
      </div>

      <div class="field">
      <div class="control">
        <%= form.label :picture %>
        <%= form.file_field :picture %>
      </div>
      </div>

      <div class="actions">
        <%= form.submit "Update Profile", class: "button is-info is-medium" %>
      </div>

      <% end %>
  </div>
</div>










  
  



