<div class="columns is-centered">
  <div class="column is-4">
    <div class="box neue-box" id="login-box">
    <h2 class='centered'>Login</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <div class="control">
      <%= f.label :email, class: 'label' %>
      <%= f.text_field :email, class: 'input neue-input' %>
      </div>
    </div>

    <div class="field">
      <div class="control">
      <%= f.label :password, class: 'label' %>
      <%= f.password_field :password, class: 'input neue-input' %>
      </div>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
      <div class="control">
      <label class="checkbox neue-checkbox">
        <%= f.check_box :remember_me %>
        <span class="petit-words">Remember me</span>
        </label>
      </div>
      </div>
    <% end %>

    <div class="field is-grouped is-grouped-centered">
      <%= f.submit "Login", class: "button neue-long-btn expanded-width" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
  </div>
  </div>
</div>



