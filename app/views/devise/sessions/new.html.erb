<div class="columns is-centered">
  <div class="column is-4">
    <h2 class="title is-2">Log In</h2>
    <div class="box neue-box">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <div class="control">
      <%= f.label :email, class: 'label' %><br />
      <%= f.email_field :email, autofocus: true, class: 'input neue-input' %>
      </div>
    </div>

    <div class="field">
      <div class="control">
      <%= f.label :password, class: 'label' %><br />
      <%= f.password_field :password, class: 'input neue-input' %>
      </div>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
      <div class="control">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: "button neue-long-btn is-medium" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
  </div>
  </div>
</div>



