<div class="columns is-centered">
  <div class="column is-4 centered-area">
    <div class="box neue-box" id="login-box">

    <h2  class='centered'>Forgot your password?</h2></br>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :email, class: 'label' %>
          <%= f.email_field :email, class: 'input neue-input' %>
        </div>

        <div class="actions">
          <%= f.submit "Send me reset password instructions", class: 'button neue-long-btn expanded-width' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>




