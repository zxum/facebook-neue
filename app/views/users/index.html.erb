<% @users.each do |user| %>
  <p>
  <%= user.name %>
  <%= user.username %>
  <% if current_user.friends.include?(user) %>
    <%= link_to "Unfriend", friendship_path(id: user),method: :delete %>
  <% elsif current_user.friendships.find { |f| f.friend_id == user.id && f.confirmed == false } %>
    Pending Friend Request
    <%= link_to "Cancel Friend Request", friendship_path(id: user), method: :delete %>
  <% else %>
    <%= link_to "Send Friend Request", friendships_path(friend_id: user.id), method: :post %>
  <% end %>
  </p>
<% end %>